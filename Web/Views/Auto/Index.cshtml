@model IEnumerable<Entidades.Auto>

@{
    ViewBag.Title = "Index";
}

<h2>AUTOS</h2>

@using (Html.BeginForm("Index", "Auto", FormMethod.Get))
{

    <div class="form-inline">

        @Html.Label("Marca:")
        @Html.TextBox("Marca", "", new { @class = "form-control" })

        @Html.Label("Color:")
        @Html.TextBox("color", "", new { @class = "form-control" })



        @Html.Label("Año:")
        @Html.TextBox("Anio", "", new { @class = "form-control" })


        @Html.Label("Estado:")
        @Html.TextBox("Estado", "", new { @class = "form-control" })


        @Html.Label("Precio Minimo:")
        @Html.TextBox("PrecioMinimo", "", new { @class = "form-control" })

        @Html.Label("Precio MAximo:")
        @Html.TextBox("PrecioMaximo", "", new { @class = "form-control" })
        <button type="submit" class="btn btn-danger">Buscar</button>
        @Html.ActionLink("Create New", "Crear", new { }, new { @class = "btn btn-success" })
    </div>

}

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Marca)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Año)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Estado)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Color)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Precio)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Marca)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Año)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Estado)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Color)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Precio)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
